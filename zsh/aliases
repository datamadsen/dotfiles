#!/bin/sh
alias l='ls -G'
alias la='ls -aG'
alias lsa='ls -aG'
alias ll='ls -lhG'
alias lla='ls -alhG'
alias ta='tmux attach'
alias s='cd ..'
alias venv='source venv/bin/activate'
alias mkvenv='virtualenv venv'
alias ccat='pygmentize -O style=fruity,linenos=1 -f console256 -g'
alias im='vim'
alias vimt='vim +NERDTree'
alias st='git st'
alias lg='git lg'
alias lgs='git lgs'
alias cia='git cia'
alias cob='git cob'
alias com='git com'
alias rb='git rb'
alias rbm='git rbm'
alias vimrc='vim ~/.vim/vimrc'
alias gh='gem_home'

if [[ $(uname) == *Darwin* ]] # Mac OS X
then
    alias ctags="`brew --prefix`/bin/ctags"
fi

# jwt.show log for datam.at
alias jwtlog='bash zcat -f /var/log/nginx/jwt.show.access.log* | goaccess'
