[user]
  name = Tim M. Madsen
  email = tim@tmadsen.com

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  pager = less -FRSX --tabs=2
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = /Users/tmadsen/.gitignore
  editor = vim
	autocrlf = false

[alias]
  ci = commit
  cia = commit -a
  co = checkout
  cob = checkout -b
  com = checkout master
  rb = rebase
  rbm = rebase master
  st = status
  d = difftool
  initexternal = !"f() { git --work-tree=. --git-dir=\"$1\" init && echo \"gitdir: $1\" >> .git; }; f"
  lg = "!git --no-pager log -20 --graph --pretty=format:'%Cred%h%Creset %<(60)%s %Cgreen%>(16)%cr %Cblue<%an>%Creset%C(yellow)%d%Creset' --abbrev-commit --date=relative --all"
  lgs = "!git --no-pager log -20 --graph --pretty=format:'%Cred%h%Creset %s'"
  lgl = "log --graph --pretty=format:'%Cred%h%Creset %<(60)%s %Cgreen%>(16)%cr %Cblue<%an>%Creset%C(yellow)%d%Creset' --abbrev-commit --date=relative --all"
  stat = !"f() { git log -n1 --stat $1; }; f"
  bclean = "!f() { git branch --merged ${1-master} | grep -v " ${1-master}$" | xargs git branch -d; }; f"

[push]
  default = simple

[diff]
  tool = vimdiff

[remote "origin"]
  prune = true
